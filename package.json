{
  "name": "alice-renderer",
  "version": "0.1.0",
  "description": "Replies renderer for Yandex Alice skills",
  "scripts": {
    "code": "eslint src test",
    "test": "mocha test/setup.js test/specs/*.spec.js",
    "test:cov": "nyc --reporter=html npm t && nyc report",
    "check:cov": "nyc check-coverage --lines 100",
    "open:cov": "open coverage/index.html"
  },
  "main": "src/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s code test"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-plugin-mocha": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "mocha": "^6.0.1",
    "nyc": "^13.3.0",
    "sinon": "^7.1.1"
  },
  "license": "MIT"
}
