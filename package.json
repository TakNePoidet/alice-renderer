{
  "name": "alice-renderer",
  "version": "0.9.0",
  "description": "Replies renderer for Yandex Alice skills",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/alice-renderer.git"
  },
  "main": "./src/index.js",
  "exports": {
    "require": "./src/index.js",
    "import": "./src/index.mjs"
  },
  "files": [
    "src/",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test",
    "test": "mocha test/setup.js test/specs/*.spec.js",
    "test:cov": "nyc --reporter=html --check-coverage --lines 100 npm t && nyc report",
    "open:cov": "open coverage/index.html",
    "ci": "run-s lint test:cov",
    "toc": "markdown-toc README.md -i",
    "stryker": "stryker run",
    "release": "run-s lint test:cov && npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:cov",
      "pre-push": "run-s lint test:cov"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^3.0.2",
    "@stryker-mutator/javascript-mutator": "^3.0.2",
    "@stryker-mutator/mocha-framework": "^3.0.2",
    "@stryker-mutator/mocha-runner": "^3.0.2",
    "await-timeout": "^1.1.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.3.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "markdown-toc": "^1.2.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1"
  },
  "license": "MIT"
}
